extend layout

block append scripts
  script(src="/js/foodListGen.js")
  script(src="/js/foodFormHandle.js")

  
block main
  main#food
    
    input#searchField(type='text' name='foodName' placeholder='What is for dinner?' size='100')
    input#searchbtn(type='submit' value='Search')

    #foodlist

        

block aside
  aside#food
    ul#foodasidelist
      .form-popup#foodAddEditForm
        form(action='/api/v1/food/man' method='GET')
          legend Food Demo
            fieldset
              div
                label Food Name
                input(name='foodName')
              div
                label Grams Per Serving
                input(name='gPerServing')
              div
                label Calories Per Gram
                input(name='cPerGram')
              input.btn#addEditBtn(type='submit' value='Add/Edit')
              button#closeAEForm Cancel
      li
        button.foodItemManipulation#addItem Add Food
      li
        button.foodItemManipulation#editItem Edit Food
      .form-popup#foodDelForm
        form(action='/api/v1/food/del' method='GET')
          h1 Delete Food
          label Food Name
          input(type='text' name='foodName')
          br
          input.btn#delFood(type='submit' value='Delete Food')
          button#closeDelForm Cancel
      li
        button.foodItemManipulation#deleteItem Delete Food
